<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/exercise_list_rv_selector"
    android:paddingStart="20dp"
    android:layout_marginBottom="12dp"
    android:paddingTop="15dp"
    android:paddingBottom="18dp">

    <TextView
        android:id="@+id/item_course_list_name_tv"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:text="상체 운동 코스"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="55dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_course_list_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:text="튼튼한 상체를 만들고 싶다면!"
        android:textColor="@color/gray_950"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_course_list_name_tv" />

    <ImageView
        android:id="@+id/item_course_list_clock_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:src="@drawable/ic_clock"
        app:layout_constraintBottom_toBottomOf="@+id/item_course_list_description_tv"
        app:layout_constraintStart_toEndOf="@+id/item_course_list_description_tv"
        app:layout_constraintTop_toTopOf="@+id/item_course_list_description_tv" />

    <TextView
        android:id="@+id/item_course_list_clock_tv"
        android:layout_width="44dp"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/gray_900"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_course_list_clock_iv"
        app:layout_constraintStart_toEndOf="@+id/item_course_list_clock_iv"
        app:layout_constraintTop_toTopOf="@+id/item_course_list_clock_iv" />

    <ImageButton
        android:id="@+id/item_course_list_more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:background="@null"
        android:src="@drawable/ic_arrow_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>