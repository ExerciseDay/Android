<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="vertical"
    tools:context=".ui.gym.detail.GymInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/gym_info_intro_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_2"
            android:text="소개"
            android:textColor="@color/gray_950"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gym_info_intro_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="소개 내용입니다."
            android:textColor="@color/gray_950"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/gym_info_intro_title_tv" />

        <TextView
            android:id="@+id/gym_info_time_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/pretendard_2"
            android:text="운영시간"
            android:textColor="@color/gray_950"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/gym_info_intro_content_tv" />

        <TextView
            android:id="@+id/gym_info_time_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="운영시간 내용입니다."
            android:textColor="@color/gray_950"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/gym_info_time_title_tv" />

        <TextView
            android:id="@+id/gym_info_time_closed_day_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="* 휴무일 내용입니다."
            android:textColor="@color/gray_950"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/gym_info_time_content_tv" />

        <TextView
            android:id="@+id/gym_info_facilities_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/pretendard_2"
            android:text="시설"
            android:textColor="@color/gray_950"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/gym_info_time_closed_day_tv" />

        <LinearLayout
            android:id="@+id/gym_info_facilities_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/gym_info_facilities_title_tv">

            <androidx.cardview.widget.CardView
                android:id="@+id/gym_info_facilities_parking_cv"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/gray_800"
                app:cardCornerRadius="13dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/gym_info_facilities_parking_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="2dp"
                    android:text="주차"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/gym_info_facilities_cloths_cv"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/gray_800"
                app:cardCornerRadius="13dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/gym_info_facilities_cloths_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="2dp"
                    android:text="운동복"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/gym_info_facilities_locker_cv"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/gray_800"
                app:cardCornerRadius="13dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/gym_info_facilities_locker_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="2dp"
                    android:text="사물함"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/gym_info_facilities_shower_cv"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/gray_800"
                app:cardCornerRadius="13dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/gym_info_facilities_shower_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="2dp"
                    android:text="샤워"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/gym_info_review_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/pretendard_2"
            android:text="리뷰"
            android:textColor="@color/gray_950"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gym_info_facilities_content_layout" />

        <TextView
            android:id="@+id/gym_info_review_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_2"
            android:text="(0)"
            android:textColor="@color/gray_950"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/gym_info_review_title_tv"
            app:layout_constraintStart_toEndOf="@+id/gym_info_review_title_tv"
            app:layout_constraintTop_toTopOf="@+id/gym_info_review_title_tv" />


        <RatingBar
            android:id="@+id/gym_info_star_rating_bar"
            style="@style/StarRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="19dp"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5"
            app:layout_constraintEnd_toStartOf="@+id/gym_info_star_point_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gym_info_review_title_tv" />

        <TextView
            android:id="@+id/gym_info_star_point_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="58dp"
            android:fontFamily="@font/pretendard_2"
            android:text="0.0"
            android:textColor="@color/gray_950"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/gym_info_star_rating_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gym_info_star_rating_bar"
            app:layout_constraintTop_toTopOf="@+id/gym_info_star_rating_bar" />

        <EditText
            android:id="@+id/gym_info_review_content_et"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/et_gray400_to_gray800"
            android:gravity="top"
            android:hint="리뷰를 작성해주세요."
            android:paddingHorizontal="18dp"
            android:paddingVertical="16dp"
            android:textColor="@color/gray_950"
            android:textColorHint="@color/gray_500"
            app:layout_constraintTop_toBottomOf="@+id/gym_info_star_rating_bar" />

        <Button
            android:id="@+id/gym_info_review_upload_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:stateListAnimator="@null"
            android:background="@drawable/btn_gray300_border18"
            android:enabled="false"
            android:fontFamily="@font/pretendard_2"
            android:text="리뷰 올리기"
            android:textColor="@drawable/btn_text_color"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/gym_info_review_content_et" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/gym_info_review_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp"
            app:layout_constraintBottom_toTopOf="@+id/gym_info_review_tb"
            app:layout_constraintTop_toBottomOf="@+id/gym_info_review_upload_btn" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/gym_info_review_tb"
            android:layout_width="match_parent"
            android:background="@color/white"
            app:tabIndicatorColor="@color/gray_950"
            app:tabIndicatorHeight="2dp"
            app:tabRippleColor="@color/transparent"
            app:tabTextAppearance="@style/TabTextAppearance"
            app:tabTextColor="@color/gray_950"
            app:layout_constraintTop_toBottomOf="@+id/gym_info_review_vp"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>