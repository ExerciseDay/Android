<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GymInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:paddingTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:paddingBottom="10dp"
            android:text="소개"
            android:textColor="#121212"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gymInfo"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="3개월 등록하면 PT할인! 김하루 트레이너가 처음부터 끝까지 책임져 드립니다. 작심삼일 PT와 함께 멋진 몸매 만들어볼까요?"
            android:textColor="#121212"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="운영시간"
            android:textColor="#121212"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:paddingTop="35dp"/>

        <TextView
            android:id="@+id/gymTime"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="월~금 오전 6시~오후 11시토~일 오전 8시~오후10시"
            android:textColor="#121212"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/gymTime2"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="* 모든 공휴일은 쉬는 날입니다. "
            android:textColor="#121212"
            android:textSize="15sp"
            android:paddingTop="3dp"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="시설"
            android:textColor="#121212"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:paddingTop="35dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gymOption1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_facilities"
                android:text="주차"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/gymOption2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_facilities"
                android:text="운동복"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/gymOption3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_facilities"
                android:text="시믈함"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/gymOption4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_facilities"
                android:text="샤워"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="리뷰"
            android:textColor="#121212"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:paddingTop="35dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <RatingBar
                android:id="@+id/gymRatingBar"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:contentDescription="헬스장 별점"/>

            <TextView
                android:id="@+id/gynScope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:textSize="18sp"
                android:textColor="#121212"
                android:paddingTop="14dp"
                android:paddingLeft="20dp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/gymReview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/btn_gray50_border18_gray800"
            android:gravity="top"
            android:hint="리뷰를 입력해주세요."
            android:inputType="text"
            android:textSize="15sp"
            android:padding="22dp"/>

        <Button
            android:id="@+id/btnReviw"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="리뷰 올리기"
            android:fontFamily="@font/pretendard"
            android:textSize="18sp"
            android:textColor="@drawable/btn_text_color"
            android:background="@drawable/btn_gray300_border18"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>