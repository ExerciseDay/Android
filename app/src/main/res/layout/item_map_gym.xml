<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/white"
    android:paddingHorizontal="25dp"
    android:paddingVertical="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_exercise_list_position_cv"
        android:layout_width="112dp"
        android:layout_height="112dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_map_gym_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/temp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_map_gym_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:fontFamily="@font/pretendard_2"
        android:text="머슬PT"
        android:textColor="@color/gray_950"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_exercise_list_position_cv"
        app:layout_constraintTop_toTopOf="@+id/item_exercise_list_position_cv" />

    <TextView
        android:id="@+id/item_map_gym_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lineHeight="20sp"
        android:text="서울 노원구 광운로 39 3층"
        android:textColor="@color/gray_950"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/item_map_gym_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_map_gym_name_tv" />

    <TextView
        android:id="@+id/item_map_gym_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="20sp"
        android:text="광운대에서 383m"
        android:textColor="@color/gray_800"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/item_map_gym_address_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_map_gym_address_tv" />

    <LinearLayout
        android:id="@+id/item_map_gym_facility_group_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/item_map_gym_distance_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_map_gym_distance_tv">

        <TextView
            android:id="@+id/item_map_gym_parking_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/tv_gray300_border18"
            android:text="주차"
            android:textColor="@color/gray_900"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_map_gym_sauna_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/tv_gray300_border18"
            android:text="사우나"
            android:textColor="@color/gray_900"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_map_gym_cloths_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/tv_gray300_border18"
            android:text="운동복"
            android:textColor="@color/gray_900"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_map_gym_shower_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_gray300_border18"
            android:text="샤워"
            android:textColor="@color/gray_900"
            android:textSize="13sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>