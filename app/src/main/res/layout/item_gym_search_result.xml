<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/gym_result_civ"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/temp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:id="@+id/gym_result_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작심삼일 PT"
        android:textSize="17sp"
        android:fontFamily="@font/pretendard_2"
        android:textColor="@color/gray_950"
        app:layout_constraintTop_toTopOf="@id/gym_result_civ"
        app:layout_constraintLeft_toRightOf="@id/gym_result_civ"
        android:layout_marginLeft="18dp"/>

    <TextView
        android:id="@+id/gym_result_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울 노원구 광운로 39 3층"
        android:textSize="13sp"
        android:fontFamily="@font/pretendard"
        android:textColor="@color/gray_950"
        app:layout_constraintTop_toBottomOf="@id/gym_result_name_tv"
        app:layout_constraintLeft_toLeftOf="@id/gym_result_name_tv"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/gym_result_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="광운대에서 384m"
        android:textSize="13sp"
        android:fontFamily="@font/pretendard"
        android:textColor="@color/gray_800"
        app:layout_constraintBottom_toBottomOf="@id/gym_result_civ"
        app:layout_constraintLeft_toLeftOf="@id/gym_result_name_tv"/>

    <View
        android:id="@+id/gym_result_div_v"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>