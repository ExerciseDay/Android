<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/sign_up_group_01_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_sign_up_tv"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/sign_up_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/sign_up_sign_up_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:lineHeight="30sp"
        android:text="회원가입"
        android:textAlignment="textStart"
        android:textColor="#464646"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_caption_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_group_01_layout" />

    <TextView
        android:id="@+id/sign_up_caption_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="4dp"
        android:lineHeight="23sp"
        android:text="계정 정보를 입력하고 비밀번호를 설정해주세요"
        android:textAlignment="textStart"
        android:textColor="#464646"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_email_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_sign_up_tv" />


    <TextView
        android:id="@+id/sign_up_email_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:paddingStart="18dp"
        android:text="이메일"
        android:textColor="#464646"
        android:textFontWeight="500"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_caption_tv" />


    <EditText
        android:id="@+id/sign_up_email_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/sign_up_edittext_shape"
        android:hint="example@haruwoundong.kr"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingStart="18dp"
        android:paddingTop="12dp"
        android:paddingEnd="92dp"
        android:paddingBottom="13dp"
        android:text="@null"
        android:textColorHint="#C2C2C2"
        android:textFontWeight="500"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_email_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up_email_check_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/sign_up_email_check_btn_shape"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:text="중복확인"
        android:textColor="#606060"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_email_edt"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_email_edt"
        app:layout_constraintTop_toTopOf="@+id/sign_up_email_edt" />

    <TextView
        android:id="@+id/sign_up_email_error_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="4dp"
        android:lineHeight="20sp"
        android:paddingStart="18dp"
        android:textColor="@color/form_error"
        android:textSize="11sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_email_edt" />

    <TextView
        android:id="@+id/sign_up_nickname_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="16dp"
        android:paddingStart="18dp"
        android:text="닉네임"
        android:textColor="#464646"
        android:textFontWeight="500"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_email_error_tv" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sign_up_group_03_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_nickname_tv">

        <EditText
            android:id="@+id/sign_up_nickname_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_up_edittext_shape"
            android:hint="하루운동"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="18dp"
            android:paddingTop="12dp"
            android:paddingEnd="92dp"
            android:paddingBottom="13dp"
            android:textColorHint="#C2C2C2"
            android:textFontWeight="500"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/sign_up_nickname_remove_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="19dp"
            android:background="@null"
            android:src="@drawable/ic_edt_remove"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/sign_up_nickname_error_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="4dp"
        android:lineHeight="20sp"
        android:paddingStart="18dp"
        android:textColor="@color/form_error"
        android:textSize="11sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_group_03_layout" />

    <TextView
        android:id="@+id/sign_up_password_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="16dp"
        android:paddingStart="18dp"
        android:text="비밀번호"
        android:textColor="#464646"
        android:textFontWeight="500"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_nickname_error_tv" />

    <EditText
        android:id="@+id/sign_up_password_edt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/sign_up_edittext_shape"
        android:hint="********"
        android:inputType="textPassword"
        android:lineHeight="25dp"
        android:maxLength="16"
        android:maxLines="1"
        android:paddingStart="18dp"
        android:paddingTop="12dp"
        android:paddingEnd="92dp"
        android:paddingBottom="13dp"
        android:textColorHint="#C2C2C2"
        android:textFontWeight="500"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_password_tv" />

    <TextView
        android:id="@+id/sign_up_password_error_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="4dp"
        android:lineHeight="20sp"
        android:paddingStart="18dp"
        android:textColor="@color/form_error"
        android:textSize="11sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_password_edt" />

    <TextView
        android:id="@+id/sign_up_password_check_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="16dp"
        android:paddingStart="18dp"
        android:text="비밀번호 확인"
        android:textColor="#464646"
        android:textFontWeight="500"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_password_error_tv" />

    <EditText
        android:id="@+id/sign_up_password_check_edt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/sign_up_edittext_shape"
        android:hint="********"
        android:inputType="textPassword"
        android:lineHeight="25dp"
        android:maxLength="16"
        android:maxLines="1"
        android:paddingStart="18dp"
        android:paddingTop="12dp"
        android:paddingEnd="92dp"
        android:paddingBottom="13dp"
        android:textColorHint="#C2C2C2"
        android:textFontWeight="500"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_password_check_tv" />

    <TextView
        android:id="@+id/sign_up_password_check_error_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="40dp"
        android:lineHeight="20sp"
        android:paddingStart="18dp"
        android:textColor="@color/form_error"
        android:textSize="11sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_password_check_edt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/sign_up_next_btn_border"
        android:stateListAnimator="@null"
        android:text="다음"
        android:textColor="#979797"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>