<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="18dp">
    <TextView
        android:id="@+id/search_type_title1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 검색어"
        android:fontFamily="@font/pretendard_2"
        android:textSize="16sp"
        android:textColor="@color/gray_950"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <LinearLayout
        android:id="@+id/search_type_part_l"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_type_title1_tv"
        android:layout_marginTop="13dp">
        <LinearLayout
            android:id="@+id/search_type_arm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_gray50_border13_gray500"
            android:orientation="horizontal"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="스쿼트"
                android:fontFamily="@font/pretendard"
                android:textColor="@color/gray_900"
                android:textSize="15sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginHorizontal="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_type_shoulder_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_gray50_border13_gray500"
            android:orientation="horizontal"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="어깨"
                android:fontFamily="@font/pretendard"
                android:textColor="@color/gray_900"
                android:textSize="15sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginHorizontal="12dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>