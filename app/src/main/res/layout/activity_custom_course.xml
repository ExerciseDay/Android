<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomCourse">

    <View
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginBottom="14sp"
        android:background="@drawable/join_view_btn_unselected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/courseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/pretendard"
        android:text="하체 운동 코스"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/box"
        app:layout_constraintTop_toTopOf="@+id/box" />

    <ImageView
        android:id="@+id/iconTime"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/icon_time"
        app:layout_constraintBottom_toBottomOf="@+id/box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseName" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="60분"
        android:textSize="13sp"
        android:textColor="@color/gray_900"
        android:fontFamily="@font/pretendard"
        app:layout_constraintStart_toEndOf="@+id/iconTime"
        app:layout_constraintTop_toBottomOf="@+id/courseName" />

    <ImageView
        android:id="@+id/iconKacl"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/icon_kcal"
        app:layout_constraintBottom_toBottomOf="@+id/box"
        app:layout_constraintStart_toEndOf="@+id/textTime"
        app:layout_constraintTop_toBottomOf="@+id/courseName" />

    <TextView
        android:id="@+id/textKcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:fontFamily="@font/pretendard"
        android:text="120kcal"
        android:textColor="@color/gray_900"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/box"
        app:layout_constraintStart_toEndOf="@+id/iconKacl" />

    <ImageButton
        android:id="@+id/btnGoCourse"
        android:layout_width="8.5sp"
        android:layout_height="17sp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="23dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="@+id/box"
        app:layout_constraintTop_toTopOf="@+id/box"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>