<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:paddingStart="25dp"
    android:paddingTop="17dp"
    android:paddingEnd="21dp"
    android:background="@drawable/btn_gray50_border18_gray500"
    android:paddingBottom="18dp">

    <TextView
        android:id="@+id/item_exercise_list_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="벤치 프레스"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_exercise_list_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="볼륨감 있는 가슴 만들기"
        android:textColor="@color/gray_950"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_exercise_list_name_tv" />

    <androidx.cardview.widget.CardView
        android:id="@+id/item_exercise_list_position_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:backgroundTint="#FFEBEE"
        app:cardCornerRadius="13dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_exercise_list_position_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="2dp"
            android:text="등"
            android:textColor="@color/red_20"
            android:textSize="15sp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>