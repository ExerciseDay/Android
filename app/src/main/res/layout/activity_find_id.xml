<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/find_id_back_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_navigate_prev"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="11dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/find_id_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/find_id_back_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingHorizontal="25dp"
        >
        <TextView
            android:id="@+id/find_id_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입된 계정 찾기"
            android:fontFamily="@font/pretendard_2"
            android:textSize="20sp"
            android:textColor="@color/gray_950"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="96dp"/>
        <TextView
            android:id="@+id/find_id_subtitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록된 전화번호를 입력해주세요"
            android:fontFamily="@font/pretendard"
            android:textSize="15sp"
            android:textColor="#464646"
            app:layout_constraintTop_toBottomOf="@id/find_id_title_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/find_id_phone_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:fontFamily="@font/pretendard"
            android:textSize="13sp"
            android:textColor="#464646"
            app:layout_constraintTop_toBottomOf="@id/find_id_subtitle_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="18dp"/>

        <EditText
            android:id="@+id/find_id_phone_et"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:fontFamily="@font/pretendard"
            android:textSize="17sp"
            android:textColor="@color/gray_950"
            android:hint="010-1234-5678"
            android:background="@drawable/et_gray800_to_gray950"
            android:inputType="phone"
            android:maxLength="13"
            app:layout_constraintTop_toBottomOf="@id/find_id_phone_title_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingHorizontal="18dp"
            android:layout_marginTop="4dp"/>

        <ImageButton
            android:id="@+id/find_id_phone_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_text_delete"
            android:background="@color/transparent"
            app:layout_constraintRight_toRightOf="@id/find_id_phone_et"
            app:layout_constraintTop_toTopOf="@id/find_id_phone_et"
            app:layout_constraintBottom_toBottomOf="@id/find_id_phone_et"
            android:layout_marginRight="18dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/find_id_alert_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="올바른 전화번호를 입력해주세요"
            android:fontFamily="@font/pretendard"
            android:textSize="13sp"
            android:textColor="@color/pink_0"
            app:layout_constraintTop_toBottomOf="@id/find_id_phone_et"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="4dp"
            android:visibility="invisible"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/find_id_next_btn"
            android:text="다음"
            android:fontFamily="@font/pretendard_2"
            android:textSize="18sp"
            android:textColor="@drawable/btn_text_color"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/btn_gray300_border18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="44dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>