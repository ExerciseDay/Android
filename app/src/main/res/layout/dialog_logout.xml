<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_bg"
    android:paddingBottom="28dp">
    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:fontFamily="@font/pretendard_2"
        android:textSize="18sp"
        android:textColor="@color/gray_950"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/dialog_intro_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말 로그아웃 하시겠습니까?"
        android:fontFamily="@font/pretendard"
        android:textSize="13sp"
        android:textColor="@color/gray_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title_tv"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/btn_pink0_border18"
        android:text="로그아웃"
        android:fontFamily="@font/pretendard_2"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/dialog_intro_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginHorizontal="19dp"/>

    <Button
        android:id="@+id/close_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/btn_gray50_border18_gray500"
        android:text="닫기"
        android:fontFamily="@font/pretendard_2"
        android:textSize="18sp"
        android:textColor="@color/gray_500"
        app:layout_constraintTop_toBottomOf="@id/logout_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginHorizontal="19dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>