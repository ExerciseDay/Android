<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.temp.EditCourseActivity">

    <View
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginBottom="14sp"
        android:background="@drawable/join_view_btn_unselected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/courseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/pretendard"
        android:text="하체 운동 코스"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/box" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pretendard"
        android:text="60분"
        android:textColor="@color/gray_900"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/iconTime"
        app:layout_constraintTop_toBottomOf="@+id/courseName" />

    <ImageView
        android:id="@+id/iconKacl"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/icon_kcal"
        app:layout_constraintBottom_toBottomOf="@+id/box"
        app:layout_constraintStart_toEndOf="@+id/textTime"
        app:layout_constraintTop_toBottomOf="@+id/courseName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textKcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/pretendard"
        android:text="120kcal"
        android:textColor="@color/gray_900"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/box"
        app:layout_constraintStart_toEndOf="@+id/iconKacl" />

    <ImageButton
        android:id="@+id/btnGoCourse"
        android:layout_width="28sp"
        android:layout_height="28sp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/icon_move"
        app:layout_constraintBottom_toBottomOf="@+id/box"
        app:layout_constraintEnd_toEndOf="@+id/box"
        app:layout_constraintTop_toTopOf="@+id/box"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/iconTime"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/icon_time"
        app:layout_constraintBottom_toBottomOf="@+id/box"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/courseName"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="18.5sp"
        android:layout_height="18.5sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/box"
        app:layout_constraintStart_toStartOf="@+id/box"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_delete" />


</androidx.constraintlayout.widget.ConstraintLayout>