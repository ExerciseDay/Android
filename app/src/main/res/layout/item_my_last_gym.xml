<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="25dp"
    android:paddingVertical="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_my_last_gym_iv"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/temp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_my_last_gym_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/pretendard_2"
        android:text="작심삼일 PT"
        android:textColor="@color/gray_950"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/item_my_last_gym_iv"
        app:layout_constraintTop_toTopOf="@id/item_my_last_gym_iv" />

    <TextView
        android:id="@+id/item_my_last_gym_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pretendard"
        android:text="서울 노원구 광운로 39 3층"
        android:textColor="@color/gray_950"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/item_my_last_gym_name_tv"
        app:layout_constraintTop_toBottomOf="@id/item_my_last_gym_name_tv" />

    <TextView
        android:id="@+id/item_my_last_gym_univ_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard"
        android:text="광운대"
        android:textColor="@color/gray_800"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/item_my_last_gym_iv"
        app:layout_constraintLeft_toLeftOf="@id/item_my_last_gym_name_tv" />

    <TextView
        android:id="@+id/item_my_last_gym_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard"
        android:text="에서 384m"
        android:textColor="@color/gray_800"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/item_my_last_gym_univ_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_my_last_gym_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>