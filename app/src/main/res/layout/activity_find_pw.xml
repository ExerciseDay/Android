<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/find_pw_back_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_navigate_prev"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="11dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/find_pw_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/find_pw_back_btn">

        <TextView
            android:id="@+id/find_pw_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_marginTop="96dp"
            android:fontFamily="@font/pretendard_2"
            android:text="비밀번호 찾기"
            android:textColor="@color/gray_950"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/find_pw_subtitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/pretendard"
            android:text="가입한 계정 정보를 입력해주세요"
            android:textColor="#464646"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_pw_title_tv" />

        <TextView
            android:id="@+id/find_pw_email_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="41dp"
            android:fontFamily="@font/pretendard"
            android:text="이메일"
            android:textColor="#464646"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_pw_subtitle_tv" />

        <EditText
            android:id="@+id/find_pw_email_et"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/et_gray800_to_gray950"
            android:fontFamily="@font/pretendard"
            android:hint="example@haruwoundong.kr"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="18dp"
            android:textColor="@color/gray_950"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_pw_email_title_tv" />

        <ImageButton
            android:id="@+id/find_pw_email_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:background="@color/transparent"
            android:src="@drawable/btn_text_delete"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/find_pw_email_et"
            app:layout_constraintRight_toRightOf="@id/find_pw_email_et"
            app:layout_constraintTop_toTopOf="@id/find_pw_email_et" />

        <TextView
            android:id="@+id/find_pw_email_alert_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/pretendard"
            android:text="올바른 이메일을 입력해주세요"
            android:textColor="@color/pink_0"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_pw_email_et" />

        <TextView
            android:id="@+id/find_pw_phone_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/pretendard"
            android:text="전화번호"
            android:textColor="#464646"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_pw_email_alert_tv" />

        <EditText
            android:id="@+id/find_pw_phone_et"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/et_gray800_to_gray950"
            android:fontFamily="@font/pretendard"
            android:hint="010-1234-5678"
            android:inputType="phone"
            android:maxLength="13"
            android:paddingHorizontal="18dp"
            android:textColor="@color/gray_950"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_pw_phone_title_tv" />

        <ImageButton
            android:id="@+id/find_pw_phone_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:background="@color/transparent"
            android:src="@drawable/btn_text_delete"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/find_pw_phone_et"
            app:layout_constraintRight_toRightOf="@id/find_pw_phone_et"
            app:layout_constraintTop_toTopOf="@id/find_pw_phone_et" />

        <TextView
            android:id="@+id/find_pw_phone_alert_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/pretendard"
            android:text="올바른 전화번호를 입력해주세요"
            android:textColor="@color/pink_0"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_pw_phone_et" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/find_pw_send_auth_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_gray300_border18"
            android:enabled="false"
            android:fontFamily="@font/pretendard_2"
            android:text="인증번호 받기"
            android:textColor="@drawable/btn_text_color"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_pw_phone_alert_tv" />

        <LinearLayout
            android:id="@+id/find_pw_auth_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_pw_phone_et"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginRight="8dp">

                <EditText
                    android:id="@+id/find_pw_auth_et"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_gray800_to_gray950"
                    android:paddingLeft="18dp"
                    android:hint="1234"
                    android:inputType="number"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <ImageButton
                    android:id="@+id/find_pw_auth_delete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:background="@color/transparent"
                    android:src="@drawable/btn_text_delete"
                    android:visibility="invisible"
                    app:layout_constraintTop_toTopOf="@id/find_pw_auth_et"
                    app:layout_constraintBottom_toBottomOf="@id/find_pw_auth_et"
                    app:layout_constraintRight_toRightOf="@id/find_pw_auth_et"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/find_pw_re_auth_btn"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_gray50_border18_gray600"
                android:fontFamily="@font/pretendard"
                android:text="재발송"
                android:textColor="@color/gray_950"
                android:textSize="17sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/find_pw_next_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/btn_gray300_border18"
            android:enabled="false"
            android:fontFamily="@font/pretendard_2"
            android:text="확인"
            android:textColor="@drawable/btn_text_color"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="44dp"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>