<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="18dp">
    <TextView
        android:id="@+id/search_type_title1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부위별 카테고리"
        android:fontFamily="@font/pretendard_2"
        android:textSize="16sp"
        android:textColor="@color/gray_950"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <LinearLayout
        android:id="@+id/search_type_part_l"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_type_title1_tv"
        android:layout_marginTop="13dp">
        <LinearLayout
            android:id="@+id/search_type_arm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pink20_border13"
            android:orientation="horizontal"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="팔"
                android:fontFamily="@font/pretendard"
                android:textColor="@color/red_20"
                android:textSize="15sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginHorizontal="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_type_shoulder_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pink20_border13"
            android:orientation="horizontal"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="어깨"
                android:fontFamily="@font/pretendard"
                android:textColor="@color/red_20"
                android:textSize="15sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginHorizontal="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_type_chest_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pink20_border13"
            android:orientation="horizontal"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="가슴"
                android:fontFamily="@font/pretendard"
                android:textColor="@color/red_20"
                android:textSize="15sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginHorizontal="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_type_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pink20_border13"
            android:orientation="horizontal"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="등"
                android:fontFamily="@font/pretendard"
                android:textColor="@color/red_20"
                android:textSize="15sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginHorizontal="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_type_abs_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pink20_border13"
            android:orientation="horizontal"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="복근"
                android:fontFamily="@font/pretendard"
                android:textColor="@color/red_20"
                android:textSize="15sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginHorizontal="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_type_lower_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pink20_border13"
            android:orientation="horizontal"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="하체"
                android:fontFamily="@font/pretendard"
                android:textColor="@color/red_20"
                android:textSize="15sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginHorizontal="12dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/search_type_title2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="찜한 운동에서 넣기"
        android:fontFamily="@font/pretendard_2"
        android:textSize="16sp"
        android:textColor="@color/gray_950"
        app:layout_constraintTop_toBottomOf="@id/search_type_part_l"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_type_dibs_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_type_title2_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="14dp"/>
    <Button
        android:id="@+id/search_type"
        android:layout_width="66dp"
        android:layout_height="23dp"
        android:background="@color/transparent"
        android:text="전체보기 >"
        android:fontFamily="@font/pretendard_2"
        android:textSize="15sp"
        android:textColor="@color/gray_950"
        app:layout_constraintTop_toBottomOf="@id/search_type_dibs_rv"
        app:layout_constraintRight_toRightOf="@id/search_type_dibs_rv"
        android:layout_marginTop="13dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>