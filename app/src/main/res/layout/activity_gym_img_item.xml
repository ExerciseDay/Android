<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".GymImgItem">

    <TextView
        android:id="@+id/textimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="25dp"
        android:paddingBottom="15dp"
        android:text="대표 사진"
        android:textColor="@color/gray_900"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imgGymList"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgGymList"
        android:layout_width="377sp"
        android:layout_height="377sp"
        android:fontFamily="@font/pretendard"
        android:layout_centerVertical="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ex_trainer_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textimg" />

</androidx.constraintlayout.widget.ConstraintLayout>