<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/withdraw_appbar_cl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:elevation="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/withdraw_back_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_navigate_prev"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/withdraw_appbar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_2"
            android:text="탈퇴하기"
            android:textColor="@color/gray_950"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/withdraw_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하루"
        android:fontFamily="@font/pretendard_2"
        android:textSize="20sp"
        android:textColor="@color/gray_950"
        app:layout_constraintTop_toBottomOf="@id/withdraw_appbar_cl"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:id="@+id/withdraw_unit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님과 이별하기 너무 아쉬워요."
        android:fontFamily="@font/pretendard_2"
        android:textSize="20sp"
        android:textColor="@color/gray_950"
        app:layout_constraintTop_toTopOf="@id/withdraw_nickname_tv"
        app:layout_constraintLeft_toRightOf="@id/withdraw_nickname_tv" />
    <TextView
        android:id="@+id/withdraw_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정을 삭제하면 하루님의 모든 리뷰 게시글, 찜, 활동 정보들이 삭제됩니다. 계정 삭제 후 7일간 다시 가입할 수 없어요."
        android:fontFamily="@font/pretendard"
        android:textSize="15sp"
        android:textColor="@color/gray_950"
        android:lineSpacingExtra="8sp"
        app:layout_constraintTop_toBottomOf="@id/withdraw_nickname_tv"
        app:layout_constraintLeft_toLeftOf="@id/withdraw_nickname_tv"
        android:layout_marginTop="9dp"
        android:paddingRight="50dp"/>

    <TextView
        android:id="@+id/withdraw_reason_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하루님이 계정을 삭제하는 이유를 알려주세요."
        android:fontFamily="@font/pretendard_2"
        android:textSize="20sp"
        android:textColor="@color/gray_950"
        android:lineSpacingExtra="8sp"
        app:layout_constraintTop_toBottomOf="@id/withdraw_detail_tv"
        app:layout_constraintLeft_toLeftOf="@id/withdraw_nickname_tv"
        android:layout_marginTop="21dp" />

    <EditText
        android:id="@+id/withdraw_reason_content_et"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="선택해주세요."
        android:text=""
        android:inputType=""
        android:focusable="false"
        android:textColorHint="@color/gray_600"
        android:fontFamily="@font/pretendard"
        android:textColor="@color/gray_950"
        android:background="@drawable/btn_gray50_border18_gray800"
        app:layout_constraintTop_toBottomOf="@id/withdraw_reason_title_tv"
        app:layout_constraintLeft_toLeftOf="@id/withdraw_nickname_tv"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="25dp"
        android:paddingHorizontal="18dp"/>

    <Button
        android:id="@+id/withdraw_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="제출"
        android:fontFamily="@font/pretendard_2"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/btn_pink0_border18"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="44dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>