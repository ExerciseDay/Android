<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/join_verification_code_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="16dp"
        android:text="인증번호가 발송되었습니다. 3분 안에 \n인증번호를 입력해주세요."
        android:textAlignment="center"
        android:textColor="@color/gray_950"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/join_verification_code_dialog_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        android:background="@color/gray_400"
        app:layout_constraintTop_toBottomOf="@+id/join_verification_code_dialog_content" />

    <Button
        android:id="@+id/join_verification_code_dialog_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:fontFamily="@font/pretendard_2"
        android:paddingVertical="14dp"
        android:text="확인"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/join_verification_code_dialog_line_view" />

</androidx.constraintlayout.widget.ConstraintLayout>