<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/login_id_et"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:hint="아이디"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/login_pw_et"
        app:layout_constraintRight_toLeftOf="@id/login_at_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/login_at_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/login_id_et"
        app:layout_constraintRight_toLeftOf="@id/login_email_et"
        app:layout_constraintTop_toTopOf="@id/login_id_et"
        app:layout_constraintBottom_toBottomOf="@id/login_id_et"/>

    <EditText
        android:id="@+id/login_email_et"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:hint="이메일"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/login_pw_et"
        app:layout_constraintLeft_toRightOf="@id/login_at_tv"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/login_pw_et"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/login_btn"
        android:text="로그인"
        android:layout_width="400dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/login_pw_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>