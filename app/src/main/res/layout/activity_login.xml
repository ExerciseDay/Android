<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="25dp">

    <ImageButton
        android:id="@+id/login_back_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/login_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 로그인"
        android:fontFamily="@font/pretendard_2"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/login_back_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="52dp"
        />

    <TextView
        android:id="@+id/login_email_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:fontFamily="@font/pretendard"
        android:textSize="13sp"
        android:textColor="@color/gray_950"
        app:layout_constraintTop_toBottomOf="@id/login_title_tv"
        app:layout_constraintBottom_toTopOf="@id/login_email_et"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="54dp"/>

    <Button
        android:id="@+id/login_find_id_btn"
        android:layout_width="wrap_content"
        android:layout_height="23sp"
        android:text="@string/login_find_id"
        android:textColor="@color/gray_800"
        android:fontFamily="@font/pretendard"
        android:textSize="13sp"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/login_password_et"
        app:layout_constraintRight_toLeftOf="@id/login_find_password_btn"
        android:layout_marginTop="12dp"
        />

    <Button
        android:id="@+id/login_find_password_btn"
        android:layout_width="wrap_content"
        android:layout_height="23sp"
        android:text="@string/login_find_password"
        android:textColor="@color/gray_800"
        android:fontFamily="@font/pretendard"
        android:textSize="13sp"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="@id/login_find_id_btn"
        app:layout_constraintRight_toRightOf="@id/login_password_et"

        />

    <EditText
        android:id="@+id/login_email_et"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="example@haruwoundong.kr"
        android:inputType="text"
        android:background="@drawable/btn_gray50_border18_gray800"
        app:layout_constraintTop_toBottomOf="@id/login_email_title_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="18dp"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/login_password_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:fontFamily="@font/pretendard"
        android:textSize="13sp"
        android:textColor="@color/gray_950"
        app:layout_constraintTop_toBottomOf="@id/login_email_et"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/login_password_et"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="********"
        android:inputType="textPassword"
        android:background="@drawable/btn_gray50_border18_gray800"
        app:layout_constraintTop_toBottomOf="@id/login_password_title_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="18dp"
        android:layout_marginTop="4dp"
        />

    <Button
        android:id="@+id/login_btn"
        android:text="로그인"
        android:fontFamily="@font/pretendard_2"
        android:textSize="18sp"
        android:textColor="@color/gray_600"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/btn_gray300_border18"
        app:layout_constraintTop_toBottomOf="@id/login_find_password_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/login_sign_in_intro_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 하루운동 회원이 아니세요?  "
        android:fontFamily="@font/pretendard"
        android:textSize="15sp"
        android:textColor="@color/gray_950"
        app:layout_constraintTop_toTopOf="@id/login_sign_in_btn"
        app:layout_constraintBottom_toBottomOf="@id/login_sign_in_btn"
        app:layout_constraintLeft_toLeftOf="@id/login_btn"
        app:layout_constraintRight_toLeftOf="@id/login_sign_in_btn"
        />
    <Button
        android:id="@+id/login_sign_in_btn"
        android:layout_width="wrap_content"
        android:layout_height="23sp"
        android:text="@string/login_sign_in"
        android:fontFamily="@font/pretendard"
        android:textColor="@color/gray_950"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/login_btn"
        app:layout_constraintLeft_toRightOf="@id/login_sign_in_intro_tv"
        app:layout_constraintRight_toRightOf="@id/login_btn"
        android:layout_marginTop="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>