<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/result_back_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_navigate_prev"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="11dp"
        />

    <TextView
        android:id="@+id/result_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입된 계정을 찾았습니다."
        android:fontFamily="@font/pretendard_2"
        android:textColor="#464646"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/result_back_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="52dp"/>

    <TextView
        android:id="@+id/result_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 확인 후 로그인해주세요"
        android:fontFamily="@font/pretendard"
        android:textColor="#464646"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/result_msg_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="25dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/result_profile_cv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/profile_default"
        app:layout_constraintTop_toBottomOf="@id/result_detail_tv"
        app:layout_constraintLeft_toLeftOf="@id/result_detail_tv"
        android:layout_marginTop="44dp"/>
    
    <TextView
        android:id="@+id/result_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example@haruwoundong.kr"
        android:fontFamily="@font/pretendard"
        android:textColor="@color/gray_950"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/result_profile_cv"
        app:layout_constraintTop_toTopOf="@id/result_profile_cv"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/result_create_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입일 2022.01.01"
        android:fontFamily="@font/pretendard"
        android:textSize="13sp"
        android:textColor="@color/gray_600"
        app:layout_constraintLeft_toLeftOf="@id/result_id_tv"
        app:layout_constraintTop_toBottomOf="@id/result_id_tv"
        android:layout_marginTop="5dp"/>
<!--        app:layout_constraintBottom_toBottomOf="@id/result_profile_cv"/>-->

    <Button
        android:id="@+id/result_pw_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/btn_gray50_border18_pink0"
        android:text="비밀번호 찾기"
        android:fontFamily="@font/pretendard_2"
        android:textColor="@color/pink_0"
        app:layout_constraintBottom_toTopOf="@id/result_login_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/result_login_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/btn_pink0_border18"
        android:text="로그인"
        android:fontFamily="@font/pretendard_2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="44dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>