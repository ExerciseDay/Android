<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners
                android:radius="18dp" />
            <stroke
                android:width="3dp"
                android:color="@color/gray_800" />
            <padding
                android:bottom="13dp"
                android:left="18dp"
                android:right="10dp"
                android:top="12dp" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners
                android:radius="18dp" />
            <stroke
                android:width="1.3dp"
                android:color="@color/gray_800" />
            <padding
                android:bottom="13dp"
                android:left="18dp"
                android:right="10dp"
                android:top="12dp" />
        </shape>
    </item>
</selector>