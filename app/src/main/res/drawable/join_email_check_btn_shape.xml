<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/gray_400" />
            <stroke
                android:width="1dp"
                android:color="@color/gray_500" />
            <padding
                android:bottom="8dp"
                android:left="10dp"
                android:right="10dp"
                android:top="8dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_enabled="true">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/gray_200" />
            <stroke
                android:width="1dp"
                android:color="@color/gray_500" />
            <padding
                android:bottom="8dp"
                android:left="10dp"
                android:right="10dp"
                android:top="8dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/gray_200" />
            <stroke
                android:width="1dp"
                android:color="@color/gray_200" />
            <padding
                android:bottom="8dp"
                android:left="10dp"
                android:right="10dp"
                android:top="8dp" />
        </shape>
    </item>
</selector>
