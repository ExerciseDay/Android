<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExerciseDay_Android" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- MapFragment - BottomSheetDialog - corner 뒷배경 투명 처리 -->
    <style name="CustomBottomSheetDialog" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!-- MapFragment - Spinner - Text Custom -->
    <style name="MapSpinnerTextAppearance" parent="Theme.ExerciseDay_Android">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/pretendard</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textColor">@color/gray_950</item>
    </style>

</resources>